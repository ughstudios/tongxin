<!DOCTYPE html>
<html>
  <head>
    <title>TongXin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag '/favicon.svg', type: 'image/svg+xml' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen font-sans">
    <nav class="bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-md sticky top-0 z-50">
      <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        <%= link_to 'TongXin', root_path, class: 'text-xl font-bold' %>
        <ul class="flex space-x-4">
          <% if user_signed_in? %>
            <li class="text-white/80">Signed in as <%= current_user.username %></li>
            <li><%= link_to 'Trending', trending_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'New Post', new_post_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'hover:underline text-white' %></li>
          <% else %>
            <li><%= link_to 'Trending', trending_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'Login', new_user_session_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: 'hover:underline text-white' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container mx-auto px-4 mt-6 max-w-3xl">
      <% if notice %>
        <p class="bg-green-100 border border-green-300 text-green-800 p-2 mb-2 rounded"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="bg-red-100 border border-red-300 text-red-800 p-2 mb-2 rounded"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
