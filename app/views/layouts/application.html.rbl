<!DOCTYPE html>
<html>
  <head>
    <title>TongXin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag '/favicon.svg', type: 'image/svg+xml' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <nav class="bg-white border-b mb-4">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <%= link_to 'TongXin', root_path, class: 'text-xl font-bold' %>
        <ul class="flex space-x-4">
          <% if user_signed_in? %>
            <li class="flex items-center space-x-2 text-gray-600">
              <% if current_user.avatar_url.present? %>
                <img src="<%= current_user.avatar_url %>" alt="" class="h-6 w-6 rounded-full object-cover">
              <% end %>
              <span>Signed in as <%= current_user.username %></span>
            </li>
            <li><%= link_to 'Feed', feed_posts_path, class: 'text-blue-600 hover:underline' %></li>
            <li><%= link_to 'Trending', trending_posts_path, class: 'text-blue-600 hover:underline' %></li>
            <li><%= link_to 'New Post', new_post_path, class: 'text-blue-600 hover:underline' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-blue-600 hover:underline' %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path, class: 'text-blue-600 hover:underline' %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: 'text-blue-600 hover:underline' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container mx-auto px-4">
      <% if notice %>
        <p class="bg-green-100 border border-green-300 text-green-800 p-2 mb-2 rounded"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="bg-red-100 border border-red-300 text-red-800 p-2 mb-2 rounded"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
