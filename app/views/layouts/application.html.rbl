<!DOCTYPE html>
<html>
  <head>
    <title>TongXin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag '/favicon.svg', type: 'image/svg+xml' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen font-sans pb-16">
    <nav class="bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-md sticky top-0 z-50">
      <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        <%= link_to 'TongXin', root_path, class: 'text-xl font-bold' %>
        <ul class="flex space-x-4">
          <% if user_signed_in? %>
            <li class="text-white/80">Signed in as <%= current_user.username %></li>
            <li><%= link_to 'New Post', new_post_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'hover:underline text-white' %></li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path, class: 'hover:underline text-white' %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: 'hover:underline text-white' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container mx-auto px-4 mt-6 max-w-3xl">
      <% if notice %>
        <p class="bg-green-100 border border-green-300 text-green-800 p-2 mb-2 rounded"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="bg-red-100 border border-red-300 text-red-800 p-2 mb-2 rounded"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
    <nav class="fixed bottom-0 left-0 right-0 bg-white border-t shadow flex justify-around py-2 z-50">
      <%= link_to root_path, class: 'flex flex-col items-center text-gray-700 hover:text-blue-600' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0h6" />
        </svg>
        <span class="text-xs mt-1">Home</span>
      <% end %>
      <%= link_to trending_path, class: 'flex flex-col items-center text-gray-700 hover:text-blue-600' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l4-4-4-4m5 8l4-4-4-4" />
        </svg>
        <span class="text-xs mt-1">Explore</span>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to notifications_path, class: 'flex flex-col items-center text-gray-700 hover:text-blue-600' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V4a2 2 0 10-4 0v1.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
          <span class="text-xs mt-1">Alerts</span>
        <% end %>
        <%= link_to user_path(current_user), class: 'flex flex-col items-center text-gray-700 hover:text-blue-600' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A9 9 0 1112 21a9.003 9.003 0 01-6.879-3.196z" />
          </svg>
          <span class="text-xs mt-1">Profile</span>
        <% end %>
      <% else %>
        <%= link_to trending_path, class: 'flex flex-col items-center text-gray-700 hover:text-blue-600' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l4-4-4-4m5 8l4-4-4-4" />
          </svg>
          <span class="text-xs mt-1">Explore</span>
        <% end %>
      <% end %>
    </nav>
  </body>
</html>
