<h1 class="text-2xl font-bold mb-4">Posts</h1>
<div class="mb-4">
  <%= form_with url: search_posts_path, method: :get, local: true, class: 'flex space-x-2' do |f| %>
    <%= f.text_field :q, value: params[:q], placeholder: 'Search posts', class: 'border rounded w-full p-2' %>
    <%= f.submit 'Search', class: 'bg-blue-600 text-white px-3 py-1 rounded' %>
  <% end %>
</div>
<ul class="divide-y divide-gray-200">
  <%= render @posts %>
</ul>
